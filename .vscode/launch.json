{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno: Run Current File",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect-brk", "--allow-all", "${file}"],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    },
    {
      "name": "Deno: Run Main Module",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run", 
        "--inspect-brk", 
        "--allow-net", 
        "--allow-env", 
        "--allow-read", 
        "--allow-write", 
        "mod.ts"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    },
    {
      "name": "Deno: Test",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test", 
        "--inspect-brk", 
        "--allow-net", 
        "--allow-env", 
        "--allow-read"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    }
  ]
}